{
  "compilerOptions": {
    "target": "esnext",
    "lib": [ "dom", "dom.iterable", "esnext" ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "jsx": "react",
    "outDir": "dist",
    "declaration": true
  },
  "include": [ "**/*.ts", "**/*.tsx" ],
  "exclude": [ "dist", "node_modules" ]
}